<UserControl x:Class="TaskManager.UserControls.TaskInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Border x:Name="MainBorder" BorderBrush="White" BorderThickness="1">
        <Grid x:Name="MainGrid" Background="#4146D9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="NumberTextBlock" Grid.RowSpan="3"/>
            <TextBlock x:Name="TitleTextBlock" Grid.Column="1"/>
            <TextBlock x:Name="ExecutiveEmlpoyeeTextBlock" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1"/>
            <TextBlock x:Name="DeadlineTextBlock" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"/>
        </Grid>
    </Border>
</UserControl>
