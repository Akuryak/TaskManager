<UserControl x:Class="TaskManager.UserControls.ProjectInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" Height="auto" Width="auto" d:DesignWidth="100">

    <Border x:Name="MainBorder" BorderBrush="White" Background="#4146D9" BorderThickness="1">
        <Image x:Name="ProjectImage" Margin="5" Height="40" Width="60" Grid.Column="1"/>
    </Border>
</UserControl>
