<UserControl x:Class="TaskManager.UserControls.ProjectInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    
    <Border x:Name="MainBorder" BorderBrush="White" BorderThickness="1">
        <Grid x:Name="MainGrid" Background="#4146D9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ProjectNumberTextBlock"/>
            <Image x:Name="ProjectImage" Margin="5" Height="40" Width="60" Grid.Column="1"/>
            <TextBlock x:Name="ProjectTitleTextBlock" Grid.Column="2"/>
            <TextBlock x:Name="ProjectDeadlineTextBlock" Grid.Column="3"/>
        </Grid>
    </Border>
</UserControl>
